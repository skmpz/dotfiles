    swaybar_command waybar
}

exec dbus-update-activation-environment DISPLAY
exec_always --no-startup-id bash -c "dropbox stop; sleep 10; dropbox start -i"
exec_always --no-startup-id syncthing --no-browser
exec nm-applet --indicator
exec blueman-applet
exec brightnessctl s 40%
exec pipewire
exec pipewire-pulse
exec wireplumber
exec swayidle -w \
         timeout 300 'swaylock -f -i $HOME/dotfiles/wallpapers/locked_anon.jpg -s center -c 000000' \
         timeout 360 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -i $HOME/dotfiles/wallpapers/locked_anon.jpg -s center -c 000000'

input type:keyboard {
    repeat_delay 220
    repeat_rate 80
    xkb_layout us,gr
    xkb_options grp:win_space_toggle,caps:escape
    xkb_numlock enabled
}

